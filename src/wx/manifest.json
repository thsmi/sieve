{
  "name": "Sieve",
  "description": "__MSG_extensionDescription__",
  "version": "0.6.1",
  "icons": {
    "64": "libs/icons/linux.png"
  },
  "background": {
    "page": "background.html"
  },
  "manifest_version": 3,
  "default_locale": "en_US",
  "browser_specific_settings": {
    "gecko": {
      "id": "sieve@mozdev.org",
      "update_url": "https://thsmi.github.io/sieve/update.json",
      "strict_min_version": "78.6.0"
    }
  },
  "permissions": [
    "accountsRead",
    "tabs",
    "storage"
  ],
  "experiment_apis": {
    "tcpSocket": {
      "schema": "api/schemas/tcp_socket.json",
      "parent" : {
        "scopes": [ "addon_parent" ],
        "script" : "api/parent/ext-tcp-socket.js",
        "paths": [["tcpSocket"]]
      }
    },
    "SieveAccountsApi": {
      "schema": "api/sieve/SieveAccountsApi.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "script": "api/sieve/SieveAccountsApi.js",
        "paths": [
          [
            "sieve",
            "accounts"
          ]
        ]
      }
    },
    "SieveMenuApi": {
      "schema": "api/sieve/SieveMenuApi.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "script": "api/sieve/SieveMenuApi.js",
        "paths": [
          [
            "sieve",
            "menu"
          ]
        ]
      }
    }
  }
}