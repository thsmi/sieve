{
  "diffEditor.ignoreTrimWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "build/**": true
  },
  "eslint.enable": true,
  "files.associations": {
    "*.tpl": "html",
    "*.jsm": "javascript"
  },
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.useTabStops": false,
  "editor.rulers": [
    80
  ],
  "[json]": {
    "editor.wordWrap": "on"
  },
  "python.linting.enabled": true
}